<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>org.teatrove</groupId>
    <artifactId>teatrove</artifactId>
    <version>4.1.1-espn-3</version>
  </parent>
  
  <groupId>org.teatrove</groupId>
  <artifactId>teaapps</artifactId>
  
  <packaging>jar</packaging>

  <name>TeaApps</name>
  
  <url>http://www.teatrove.org</url>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
  
  <dependencies>
    
    <!-- tea stuff -->

    <dependency>
      <groupId>org.teatrove</groupId>
      <artifactId>teaservlet</artifactId>
    </dependency>

    <!-- general -->
	
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-math</artifactId>
      <version>2.1</version>
    </dependency>
    
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.5</version>
    </dependency>
    
    <dependency>
      <groupId>commons-httpclient</groupId>
      <artifactId>commons-httpclient</artifactId>
      <version>3.1</version>
    </dependency>
    
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1.1</version>
    </dependency>

  </dependencies>

  <build>
	<plugins>

      <!-- BEGIN ESPN UPDATE: add repackaging plugin -->
      <plugin>
        <groupId>com.espn.maven.plugins</groupId>
        <artifactId>teatrove-legacy-repackager</artifactId>
        <version>${repackaging.plugin.version}</version>
        <executions>
            <execution>
                <goals>
                    <goal>repackage-sources</goal>
                </goals>
            </execution>
        </executions>
        <configuration>
            <outputDirectory>${project.build.directory}/repackaged-sources</outputDirectory>
        </configuration>  
      </plugin>
      <!-- END ESPN UPDATE -->
      
      <!-- this plugin is bound to the "generate-sources" phase -->
      <!-- creates updated PackageInfo.java files for the project -->
      <plugin>        
        <groupId>org.teatrove</groupId>
        <artifactId>package-info-maven-plugin</artifactId>
        <version>${project.version}</version>
        <configuration>
          <!-- BEGIN ESPN UPDATE: rename from org.teatrove to com.go -->
          <packageRoot>com.go.teaapps</packageRoot>
          <!-- END ESPN UPDATE -->
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>create-package-infos</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

        <!-- Use a Javadoc doclet to generate BeanInfo classes -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
            <version>2.7</version>
            <executions>
                <execution>
                    <id>generate-beaninfo</id>
                    <phase>generate-sources</phase>
                    <configuration>
                        <!-- BEGIN ESPN UPDATE: update source path to repackaged sources -->
                        <sourcepath>${project.build.directory}/repackaged-sources/src/main/java</sourcepath>
                        <!-- END ESPN UPDATE -->
                        <useStandardDocletOptions>false</useStandardDocletOptions>
                        <reportOutputDirectory>${project.build.directory}/generated-sources/beaninfo
                        </reportOutputDirectory>
                        <destDir>.</destDir>
                        <!-- BEGIN ESPN UPDATE: change org.teatrove to com.go -->
                        <doclet>com.go.toolbox.beandoc.BeanDocDoclet</doclet>
                        <!-- END ESPN UPDATE -->
                        <docletArtifact>
                            <groupId>org.teatrove</groupId>
                            <artifactId>toolbox</artifactId>
                            <version>${project.version}</version>
                        </docletArtifact>
                    </configuration>
                    <goals>
                        <goal>javadoc</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>

        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <version>1.5</version>
            <executions>
                <execution>
                    <id>add-beaninfo-sources</id>
                    <goals>
                        <goal>add-source</goal>
                    </goals>
                    <configuration>
                        <sources>
                            <source>${project.build.directory}/generated-sources/beaninfo</source>
                        </sources>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
  </build>
  
</project>
